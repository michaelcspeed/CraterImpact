<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".MainActivity">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_above="@+id/bottomItems"
		android:gravity="center">

		<ImageView
			android:id="@+id/imageDens"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:scaleType="fitXY"
			android:layout_centerInParent="true"
			android:src="@drawable/water" />
	</RelativeLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:gravity="center"
		android:orientation="vertical">

		<SeekBar
			android:id="@+id/seekBarWater"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_above="@id/spinnerDensities"
			android:layout_marginLeft="20dp"
			android:layout_marginRight="20dp"
			android:max="90"
			android:progress="0"
			android:visibility="visible" />
		<Spinner
			android:id="@+id/Spinner1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@+id/spinnerDensities"
			android:layout_marginLeft="20dp"
			android:layout_marginRight="20dp"
			android:entries="@array/targetdensities" />
		<Button
			android:id="@+id/buttonNext"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/Spinner1"
			android:layout_centerHorizontal="true"
			android:text="@string/btSubmit" />
	</LinearLayout>

</RelativeLayout>