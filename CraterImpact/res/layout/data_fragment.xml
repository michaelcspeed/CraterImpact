<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	android:id="@+id/scr"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_gravity="center"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_height="fill_parent">
	
	<LinearLayout
	    android:layout_margin="20dp"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:gravity="center">

		<Button
			android:id="@+id/inputButton"
			android:layout_width="200dp"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			android:padding="20dp"
			android:layout_marginTop="40dp"
			android:text="@string/lblInVals" />
		
		<Button
			android:id="@+id/damageButton"
			android:layout_width="200dp"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			android:padding="20dp"
			android:text="@string/damage1" />
		
		<Button
			android:id="@+id/energyButton"
			android:layout_width="200dp"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			android:padding="20dp"
			android:text="@string/lblImpEnergy" />
		<Button
			android:id="@+id/resultResult"
			android:layout_width="200dp"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			android:padding="20dp"
			android:text="@string/result" />
		<Button
			android:id="@+id/fireballButton"
			android:layout_width="200dp"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			android:padding="20dp"
			android:text="Fireball" />

	</LinearLayout>
</ScrollView> 